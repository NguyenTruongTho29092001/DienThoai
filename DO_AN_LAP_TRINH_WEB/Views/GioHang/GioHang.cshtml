@model IEnumerable<DO_AN_LAP_TRINH_WEB.Models.Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h2>Giỏ hàng</h2>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.tenSP)</th>
            <th>@Html.DisplayNameFor(model => model.hinh)</th>
            <th>@Html.DisplayNameFor(model => model.giaban)</th>
            <th>@Html.DisplayNameFor(model => model.iSoLuong)</th>
            <th>@Html.DisplayNameFor(model => model.dThanhtien)</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
           <tr>
            <td> @Html.DisplayFor(modelItem => item.tenSP) </td>
            <td> <img src="@item.hinh" width="180" /> </td>
            @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @id = item.maSP }))
            {
                <td> @String.Format("{0:0,0}", item.giaban) VNĐ </td>
                <td>
                    <input type = "number" min="1" name = "txtSoLg"
                        value = "@item.iSoLuong" />
                </td>
                <td> @Html.DisplayFor(modelItem => item.dThanhtien) </td>
                <td>
                    <a href="@Url.Action("Detail", "Sach", new { @id = item.maSP })"> Chi Tiết </a>
                   | @Html.ActionLink("Xóa", "XoaGiohang", new { @id = item.maSP })
                </td>
                <td>
                    <input type="submit" value="Cập nhật" class="btn btn-success" />
                </td>
            }
           </tr>
        }
                <tr style="font-weight: bold; text-align:left; color:red">
                    <td colspan="2"> Số loại:@ViewBag.Tongsoluongsanpham </td>
                    <td colspan="2"> Số lượng:@ViewBag.Tongsoluong </td>
                    <td colspan="4">
                        Tổng tiền:@String.Format("{0:0,0}", @ViewBag.Tongtien) VNĐ
                    </td>
                </tr>
                <tr style="font-weight: bold; color:blue; text-align:right ">
                    <td colspan="5">
                        @Html.ActionLink("Xóa giỏ hàng", "XoaTatCaGioHang")
                    </td>
                </tr>
                <tr style="font-weight: bold; color:yellow; text-align:right ">
                    <td colspan="5">
                        @Html.ActionLink("Đặt hàng", "Dathang", "GioHang")
                    </td>
                </tr>
</table>

